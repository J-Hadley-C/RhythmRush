{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
	<div class="form-container">
		<h1>Inscription</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		<div class="form-content">
			{{ form_start(registrationForm) }}

			<div class="form-group">
				{{ form_label(registrationForm.nickname, 'Nom d\'utilisateur') }}
                {{ form_widget(registrationForm.nickname, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(registrationForm.nickname) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.email.first, 'Adresse email') }}
                {{ form_widget(registrationForm.email.first, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(registrationForm.email.first) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.email.second, 'Confirmez votre adresse email') }}
                {{ form_widget(registrationForm.email.second, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(registrationForm.email.second) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.password, 'Mot de passe') }}
                {{ form_widget(registrationForm.password, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(registrationForm.password) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.phone, 'Numéro de téléphone') }}
                {{ form_widget(registrationForm.phone, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(registrationForm.phone) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.photo, 'Photo de profil') }}
                {{ form_widget(registrationForm.photo, {'attr': {'class': 'input-field'}}) }}
                {{ form_errors(registrationForm.photo) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.roles) }}
                {{ form_widget(registrationForm.roles) }}
                {{ form_errors(registrationForm.roles) }}
            </div>


            <button type="submit" class="btn">S'inscrire</button>

            {{ form_end(registrationForm) }}
			</div>
		</div>
	{% endblock %}
